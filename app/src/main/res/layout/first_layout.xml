<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:background="#ffcd2626"
        android:gravity="center_vertical">

    <ImageView
        android:layout_width="45.0dip"
        android:layout_height="45.0dip"
        android:id="@+id/title_city_manager"
        android:src="@drawable/title_city"
        />
    <ImageView
        android:layout_width="1.0dip"
        android:layout_height="40dip"
        android:id="@+id/city_seperator"
        android:layout_marginTop="2.0dip"
        android:layout_toRightOf="@id/title_city_manager"
        android:background="#A71717"
        />

        <TextView
            android:id="@+id/title_city_name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_toEndOf="@+id/title_city_manager"
            android:layout_toRightOf="@+id/title_city_manager"
            android:gravity="center_vertical"
            android:paddingLeft="5dip"
            android:text="北京天气"
            android:textColor="#ffffffff"
            android:textSize="22.0sp" />
    <ImageView
        android:layout_width="45.0dip"
        android:layout_height="45.0dip"
        android:id="@+id/title_update_btn"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:src="@drawable/title_update"
        />
    <ImageView
        android:layout_width="45.0dip"
        android:layout_height="45.0dip"
        android:id="@+id/title_share"
        android:layout_toLeftOf="@id/title_update_btn"
        android:src="@drawable/title_share"
        />
    <ImageView
        android:layout_width="45.0dip"
        android:layout_height="45.0dip"
        android:id="@+id/title_location"
        android:layout_toLeftOf="@id/title_share"
        android:src="@drawable/base_action_bar_action_city"
        />


</RelativeLayout>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_below="@id/title"
    android:background="@drawable/biz_plugin_weather_shenzhen_bg"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10.0dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/city"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15.0dip"
            android:singleLine="true"
            android:text="北京"
            android:textColor="@android:color/white"
            android:textSize="40.0sp"
            />
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/city"
            android:layout_marginLeft="15.0dip"
            android:layout_marginTop="5dip"
            android:singleLine="true"
            android:text="今天18:25发布"
            android:textColor="@android:color/white"
            android:textSize="15.0sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/humidity"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/time"
            android:layout_marginLeft="15.0dip"
            android:singleLine="true"
            android:text="湿度:57%"
            android:textColor="@android:color/white"
            android:textSize="15.0sp"
            />
        <LinearLayout
            android:id="@+id/pm2_5_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical"

            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="6.0dip"
                android:paddingLeft="12.0dip"
                android:paddingRight="12.0dip"
                android:paddingTop="6.0dip"

                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/pm2_5"
                        android:singleLine="true"
                        android:text="PM2.5"
                        android:textColor="@android:color/white"
                        android:textSize="12.0sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/pm_data"
                        android:singleLine="true"
                        android:text="220"
                        android:textColor="@android:color/white"
                        android:textSize="30.0sp"
                        />


                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pm2_5_img"
                    android:layout_marginLeft="5.0dip"
                    android:src="@mipmap/biz_plugin_weather_0_50"
                    />

            </LinearLayout>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pm2_5_quality"
                android:gravity="center"
                android:singleLine="true"
                android:text="重度污染"
                android:textColor="@android:color/white"
                android:textSize="20.0sp"
                />

        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/humidity"
            android:layout_centerInParent="true"
            android:layout_marginTop="5.0dip"

            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/weather_img"
                android:layout_alignParentLeft="true"
                android:src="@mipmap/biz_plugin_weather_qing"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/week_today"
                android:layout_marginLeft="5dip"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/weather_img"
                android:singleLine="true"
                android:text="今天星期三"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/temperature"
                android:layout_below="@+id/week_today"
                android:layout_marginLeft="5dip"
                android:layout_toRightOf="@id/weather_img"
                android:singleLine="true"
                android:text="-2°C~7°C"
                android:textColor="@android:color/white"
                android:textSize="30.0sp"


                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/climate"
                android:layout_below="@id/temperature"
                android:layout_marginLeft="5dip"
                android:layout_toRightOf="@+id/weather_img"
                android:singleLine="true"
                android:text="多云转晴"
                android:textColor="@android:color/white"
                android:textSize="20.0sp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/wind"
                android:layout_below="@+id/climate"
                android:layout_marginLeft="5dip"
                android:layout_toRightOf="@+id/weather_img"
                android:singleLine="true"
                android:text="微风"
                android:textColor="@android:color/white"
                android:textSize="20.0sp"
                />


        </RelativeLayout>


    </RelativeLayout>
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/wind"
    >
    <TextView
        android:id="@+id/pred"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="未来三天天气预报"
        android:layout_marginTop="8dip"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:textSize="22sp"

        />

</RelativeLayout>





    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pred"
        android:layout_marginTop="20.0dip"
        android:layout_marginLeft="16dip"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    <TextView
        android:id="@+id/next1"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22.0sp"
        android:layout_marginTop="5dip"
        android:singleLine="true"
        android:layout_centerHorizontal="true"
        android:text="10日星期五"
        />
    <ImageView
        android:id="@+id/next1weather"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/next1"
        android:src="@mipmap/biz_plugin_weather_qing"
        />
    <TextView
        android:id="@+id/next1text1"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/next1weather"
        android:text="-2°C~7°C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22.0sp"
        android:textColor="@android:color/white"
        />
        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/next1text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="多云转晴"
            android:textSize="22.0sp"
            android:layout_below="@id/next1text1"
            android:textColor="@android:color/white"
            />
        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/next1text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微风"
            android:textSize="22.0sp"
            android:layout_below="@id/next1text2"
            android:textColor="@android:color/white"
            />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    <TextView
        android:id="@+id/next2"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="11日星期六"
        android:textSize="22.0sp"
        android:layout_marginTop="5dip"
        android:textColor="@android:color/white"
        />



        <ImageView
            android:id="@+id/next2weather"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/next2"
            android:src="@mipmap/biz_plugin_weather_qing"
            />

        <TextView
            android:id="@+id/next2text1"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/next2weather"
            android:text="-2°C~7°C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22.0sp"
            android:textColor="@android:color/white"
            />

        <TextView
            android:id="@+id/next2text2"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="多云转晴"
            android:textSize="22.0sp"
            android:layout_below="@id/next2text1"
            android:textColor="@android:color/white"
            />

        <TextView
            android:id="@+id/next2text3"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微风"
            android:textSize="22.0sp"
            android:layout_below="@id/next2text2"
            android:textColor="@android:color/white"
            />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/next3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:text="12日星期六"
            android:textSize="22.0sp"
            android:layout_marginTop="5dip"
            android:textColor="@android:color/white"
            />

        <ImageView
            android:id="@+id/next3weather"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_below="@id/next3"
            android:src="@mipmap/biz_plugin_weather_qing"
            />
        <TextView
            android:id="@+id/next3text1"
            android:layout_below="@+id/next3weather"
            android:text="-2°C~7°C"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22.0sp"
            android:textColor="@android:color/white"
            />
        <TextView
            android:id="@+id/next3text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="多云转晴"
            android:layout_centerHorizontal="true"
            android:textSize="22.0sp"
            android:layout_below="@id/next3text1"
            android:textColor="@android:color/white"
            />

        <TextView
            android:id="@+id/next3text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微风"
            android:layout_centerHorizontal="true"
            android:textSize="22.0sp"
            android:layout_below="@id/next3text2"
            android:textColor="@android:color/white"
            />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
</RelativeLayout>